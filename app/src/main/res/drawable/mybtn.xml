<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e4d638" />
            <gradient android:angle="-90" android:startColor="#F4FA58" android:endColor="#D7DF01"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#efde21" />
            <solid android:color="#b6ad2e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff04d" />
            <gradient android:angle="-90" android:startColor="#bcba28" android:endColor="#efeb0a" />
        </shape>
    </item>
</selector>